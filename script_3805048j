targets:
  - uat_3805048j
  - prod_3805048j

tasks:
  - name: Ensure Apache2 is installed and running
    command: |
      puppet resource package apache2 ensure=installed
      puppet resource service apache2 ensure=running

  - name: Clean up and recreate the work directory
    command: |
      puppet resource file /tmp/3805048j/work ensure=absent
      puppet resource file /tmp/3805048j/work ensure=directory

  - name: Clone the operate-repo
    command: |
      git clone https://example.com/operate-repo-3805048j.git /tmp/3805048j/work

  - name: Replace index.html
    command: |
      cp /tmp/3805048j/work/new-index.html /var/www/html/index.html
