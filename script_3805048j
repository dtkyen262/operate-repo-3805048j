targets:
  - uat_3805048j
  - prod_3805048j

tasks:
  - name: Ensure Apache2 is installed and running
    command: |
      puppet resource package apache2 ensure=installed
      puppet resource service apache2 ensure=running

  - name: Clean up and recreate the work directory
    command: |
      puppet resource file /tmp/<your polite ID>/work ensure=absent
      puppet resource file /tmp/<your polite ID>/work ensure=directory

  - name: Clone the operate-repo
    command: |
      git clone https://example.com/operate-repo-<your polite ID>.git /tmp/<your polite ID>/work

  - name: Replace index.html
    command: |
      cp /tmp/<your polite ID>/work/new-index.html /var/www/html/index.html
